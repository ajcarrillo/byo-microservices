{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "google",
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"linebreak-style": ["error", "windows"],
		"semi": [
			2,
			"never"
		],
		"quotes": [
			2,
			"single",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"max-len": [
			"error",
			{
				"code": 120
			}
		],
		"object-curly-spacing": "off",
		"indent": [
			"error",
			2
		]
	}
}